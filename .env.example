# --- Embedding Configuration (Used for Docs AND Queries) ---
# Must use OpenAI for embeddings in this implementation
EMBEDDING_PROVIDER=OPENAI
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# --- Chat Generation Configuration (Used for Final Answer) ---
# Must use OpenAI for chat in this implementation
CHAT_PROVIDER=OPENAI
CHAT_MODEL=gpt-4-turbo

# --- API Keys ---
# Only OpenAI is supported in this implementation
OPENAI_API_KEY=your_openai_key_here

# --- Database Settings ---
DATABASE_URL=postgresql://postgres:postgres@db:5432/sp500_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sp500_db

# --- SEC Data Fetching ---
# Email for SEC EDGAR user agent (required by SEC)
SEC_EMAIL=your_email@example.com

# --- Application Configuration ---
# Keep as FULL for the complete application
APP_MODE=FULL

# --- Logging Configuration (Optional) ---
# Set to DEBUG for more detailed logs during troubleshooting
# LOG_LEVEL=INFO

# --- RAG Configuration (Optional) ---
# Number of chunks to retrieve for each query
# RAG_TOP_K=5